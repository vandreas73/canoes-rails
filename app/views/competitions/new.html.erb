<div class="container mt-3">
        <div class="card border-primary mb-3">
            <div class="card-header text-white bg-primary">Create competition</div>
            <div class="card-body">
                <%= form_for @competition, url: create_competition_path(params[:canoe_id]), method: :post do |form| %>
                    <div class="mb-3">
                        <%= form.label :name, class: 'form-label' %>
                        <%= form.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="mb-3">
                        <%= form.label :date, class: 'form-label' %>
                        <%= form.date_field :date, class: 'form-control' %>
                    </div>
                    <%= form.hidden_field :canoe_id, value: params[:canoe_id]%>
                    <div class="d-flex justify-content-between align-items- gap-2">
                        <div>
                            <%= form.submit 'Save', class: 'btn btn-success' %>
                            <%= link_to "Cancel", :back, class: "btn btn-warning link-light" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>